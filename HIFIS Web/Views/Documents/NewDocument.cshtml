@model DocumentViewModel 
@{
    ViewBag.ViewTitle = Labels.viewTitle_NewDocument;
    
    ViewBag.LayoutView = LayoutPage.Client;
}

@Html.Partial("_ValidationSummaryOuter")

@using (Html.BeginForm("NewDocument", "Documents", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{  
    <div class="col-sm-12">
        
        <div class="row">
            @Html.Partial("_Document", Model)
        </div>

        <div class="row">            
            <div class="col-sm-offset-3 col-sm-9">
                <div class="form-group">
                    <button type="submit" class="saveButton">@Labels.Save</button>
                    @Html.ActionLink(Labels.Cancel, "DocumentList", "Documents", new { id = Model.ClientID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
                </div>
            </div>
        </div>
    </div>              
}
