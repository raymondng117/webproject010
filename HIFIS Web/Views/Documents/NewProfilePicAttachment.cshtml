@model IdentificationAttachmentViewModel 
@{
    ViewBag.ViewTitle = Labels.viewTitle_ClientDocumentAttachment;
    
    ViewBag.LayoutView = LayoutPage.Client;
}

@Html.Partial("_ValidationSummaryOuter")

@using (Html.BeginForm("NewProfilePicAttachment", "Documents", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.Partial("_BaseHiddenFor", (BaseViewModel)Model)

    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ClientDocAttachmentID) 
    @Html.HiddenFor(model => model.ClientID)
                 
    <div>
        @if (ViewBag.OnlyImages != null && ViewBag.OnlyImages != true)
        {
            @Html.HifisTextBoxFor(model => model.UploadFile, new { @class = "wdth-strct-250", type = "file" })
        }
        else
        {
            @Html.HifisTextBoxFor(model => model.UploadFile, new { @class = "wdth-strct-250", type = "file", accept = "image/*" }) 
        }            
    </div>
    
    <div class="form-group">
		<div class="col-sm-offset-3 col-sm-9">
			<button type="submit" class="saveButton  ">@Labels.Save</button>
            @Html.ActionLink(Labels.Cancel, "DisplayVitals", "ClientTombstone", new { id = Model.ClientID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
		</div>
	</div> 
}

