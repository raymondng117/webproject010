@model HousingMaintenanceViewModel

@Html.Partial("_ValidationSummaryOuter")

@{
    ViewBag.LayoutView = LayoutPage.SecNav;
    ViewBag.ViewTitle = Labels.Edit+" "+Labels.MaintenanceWork; 
}

@using (Html.BeginForm("EditMaintenance", "HousingUnit", FormMethod.Post, new { @class = "form-horizontal" }))
{  
    <div  id="view">
        @Html.Partial("_BaseHiddenFor", (BaseViewModel)Model)
        <div id="housingMaintenanceForm">@Html.Partial("_MaintenanceWork")</div>
    </div>
    
    <div class="form-group">
	    <div class="col-sm-offset-3 col-sm-9">
			<button type="submit" class="saveButton">@Labels.Save</button>
            @Html.ActionLink(Labels.Cancel, "Edit", "HousingUnit", new { id = Model.HouseID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
	    </div>
    </div>  
}