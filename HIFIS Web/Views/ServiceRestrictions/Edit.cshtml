@model ClientBarViewModel
@{
    ViewBag.ViewTitle = Labels.viewTitle_ClientServiceRestrictionsEdit;
    
    ViewBag.LayoutView = LayoutPage.Client; 
}

@Html.Partial("_ValidationSummaryOuter")

<div>    
    @using (Html.BeginForm("Edit", "ServiceRestrictions", new { id = Model.ClientID, restrictedPeriodID = Model.ClientBarredPeriodID }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ClientBarredPeriodID)
        
        @Html.Partial("_ServiceRestrictions", Model)

        <div class="form-group">
			<div class="col-sm-offset-3 col-sm-9">
				<button type="submit" id="Save" name="radio" class="saveButton  ">@Labels.Save</button>
                @Html.ActionLink(Labels.Cancel, "ClientList", "ServiceRestrictions", new { id = Model.ReadOnlyVitals.ClientID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
			</div>
		</div>
        @Html.Partial("_BaseHiddenFor", (BaseViewModel)Model) 
    }
</div>

<div>@Html.Partial("_BaseFooter", (BaseViewModel)Model)</div>
