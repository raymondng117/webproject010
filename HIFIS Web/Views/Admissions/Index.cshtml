                                        <th class="align-text-center">@Labels.Beds</th>
                                        <th class="align-text-center">@Labels.Reservations</th>
                                        <th class="align-text-center">@Labels.Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
