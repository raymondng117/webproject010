                        <div class="pad_top_margin_5">
                            <button id="refresh-stats" class="reloadButton no-print" role="button">@Labels.Refresh</button>
                            @if (RightsHelper.HasRight(UserRights.ExportToExcelButton))
                            {
                                <span class="float-right">@Html.ActionLink(Labels.ExportToExcel, "Admissions", "Excel", new { DataSetName = "Availability" }, new { @class = "excelButton no-print noText", alt=Labels.ExportToExcel, aria_label=Labels.ExportToExcel, @role="button"  })</span>
