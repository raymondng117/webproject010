                            }
                            @if (RightsHelper.HasRight(UserRights.Stays_ExpressBookIn))
                            {
                                @Html.ActionLink(Labels.ExpressBookin, "ExpressBookIn", "Admissions", null, new { @class = "expressButton no-print", alt = Labels.ExpressBookin, aria_label = Labels.ExpressBookin, @role = "button" })
                            }
                            @if (RightsHelper.HasRight(UserRights.ManageRoomsBeds))
                            {
                                <button class="manage-btn confirmButton manageButton no-print" role="button">@Labels.ManageRoomsBeds</button>
                            }

                            @if (RightsHelper.HasRight(UserRights.Diversion_List))
                            {
                                @Html.ActionLink(Labels.viewTitle_DiversionList, "List", "Diversion", null, new { @class = "listButton no-print", alt = Labels.viewTitle_DiversionList, aria_label = Labels.viewTitle_DiversionList, @role = "button" })
                            }

                            @if (RightsHelper.HasRight(UserRights.ExportToExcelButton))
                            {
                                <span class="float-right">@Html.ActionLink(Labels.ExportToExcel, "GetDefaultParamForm", "Excel", new { ActionName = "Admissions", DataSetName = "Stays" }, new { @class = "excelButton no-print noText wb-lbx lbx-modal", aria_controls = "Modal_Excel", alt = Labels.ExportToExcel, aria_label = Labels.ExportToExcel, @role = "button" })</span>
                            }

