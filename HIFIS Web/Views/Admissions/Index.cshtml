@model IndexPageViewModel
@{
    ViewBag.Title = "Admissions";
    ViewBag.ViewTitle = Labels.Admissions;
    ViewBag.LayoutView = LayoutPage.ContentOnly;
}

<link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/Stylesheets/HifisModules/AdmissionStyles.css")" />
<style>
    /*This class is used to hide a duplicate caused by something javascript related. Bug# 232
        CSS was used in the interest of time.*/
    .suppressDuplicate div div span:nth-child(3) {
        display: none;
    }
</style>



<!-- Loader div -->
<div id="loader-div" class="">
    @Labels.Loading <img src="@Url.Content("~/Content/images/Loaders/loader-50.gif")" alt="Loader Image" />
</div>

<div id="container" style="margin-left: 5000px; ">
    <!-- This div contains the tables which displays the currently booked in clients and reservations for the shelter in list views. -->
    <div id="tablesView" class="row">
        <!-- Tab panes -->
        <div class="wb-tabs ignore-session col-xs-12">
            <div class="tabpanels">
                @if (RightsHelper.HasRight(UserRights.Stays_List))
                {

                    <!-- Tab Pane #1: BookedInTab -->
                    <details id="details-panel1" class="pddng-md" @(ViewBag.ShowReservations == false ? "open=\"open\"" : "")>
                        <summary>@Labels.BookedIn</summary>
                        <div>
                            <table id="bookedInTable" class="wb-tables table table-striped table-hover"
                                   data-wb-tables='{   "columns": [
                                                { "width": "20%", "data": "name"},
                                                { "width": "0%", "bVisible": false, "data": "sort-date"},
                                                { "width": "20%", "iDataSort": 1, "data": "date"},
                                                { "width": "30%", "data": "reason"},
                                                { "width": "15%", "data": "accomodation"},
                                                { "width": "15%", "data": "action", "orderable": false}
                                            ],
                                            @*"columnDefs": [
                                                { "type": "date", "targets": 1 }
                                            ],*@
                                            "processing": true,
                                            "ajax": "@Url.Action("SheltersBookedInListJson", "Admissions", null)"
                                        }'>
                                <thead>
                                    <tr>
                                        <th class="align-text-center">@Labels.FullName</th>
                                        <th class="align-text-center"></th>
                                        <th class="align-text-center">@Labels.Date</th>
                                        <th class="align-text-center">@Labels.ReasonForService</th>
                                        <th class="align-text-center">@Labels.Room : @Labels.Bed</th>
