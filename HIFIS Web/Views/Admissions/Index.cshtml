                        {
                            @Html.ActionLink(Labels.Cancel, "ClientAdmissions", "Admissions", new { id = Model.ClientIDs.FirstOrDefault() }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label=Labels.Cancel, @role="button"  });
                        }
                        else
                        {
                            @Html.ActionLink(Labels.Cancel, "Index", "Admissions", new { id = "" }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label=Labels.Cancel, @role="button"  });
                        }

                    </span>
                    <button id="refresh-beds" class="reloadButton no-print" role="button">@Labels.RefreshOccupancy</button>
