@model ClientHealthViewModel
@{
    ViewBag.ViewTitle = Labels.viewTitle_NewHealth;
    
    ViewBag.LayoutView = LayoutPage.Client;
}

@Html.Partial("_ValidationSummaryOuter")

<div class="row">    
    @using (Html.BeginForm("NewHealth", "Health", FormMethod.Post, new { @class = "form-horizontal" }))
    {   
        <div class="row">
            @Html.Partial("_ClientHealth", Model)
        </div> 
        
        <div class="row mrgn-tp-sm">
            <div class="col-sm-offset-3 col-sm-9">
                <div class="form-group">
                    <button type="submit" class="saveButton">@Labels.Save</button>
                    @Html.ActionLink(Labels.Cancel, "HealthList", "Health", new { id = Model.ClientID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
                </div>
            </div>
        </div>
    }
</div>
