@model ContinuumCategoryViewModel

<section id="Modal_AddCategory" class="modal-dialog modal-content overlay-def">
    <header class="modal-header">
        <h2 class="modal-title">@Labels.HousingContinuum_NewCategory</h2>
    </header>
    <div class="modal-body">
        @using (Html.BeginForm("AddCategory", "Continuum", FormMethod.Post, new { @class = "form-horizontal", id = "addCategoryForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.Partial("_BaseHiddenFor", (BaseViewModel)Model)

            @Html.HiddenFor(m => m.ContinuumID)

            <div class="form-group">
                <label for="SelectedHouseTypes" class="col-sm-3 control-label">
                    @Labels.HousingContinuum_CategoryName
                </label>
                <div class="col-sm-9">
                    <div class="input-group">
                        @Html.HifisEditorFor(m => m.Name, "", new { style = "margin-left:15px;" }, true)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="SelectedHouseTypes" class="col-sm-3 control-label">
                    @Labels.HousingContinuum_HousingTypes
                </label>
                <div class="col-sm-9">
                    <div class="input-group">
                        @Html.ListBoxFor(m => m.SelectedHouseTypes, ViewBag.AvailableHousingTypes as SelectList)
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="modal-footer" style="background-color: white;">
        <button id="addCategorySaveBtn" class="saveButton">@Labels.Save</button>
        <button id="addCategoryCloseBtn" class="btn btn-primary popup-modal-dismiss cancelButton" type="button">@Labels.Close</button>
    </div>
</section>

<script>

    //Get everything to display correctly
    init_hifis();
    autoWidthBoot('.modal-body');

    $(function () { $("#addCategoryForm").hifisValidation(); });

    $("#addCategorySaveBtn").click(function () {

        if ($("#addCategoryForm").valid()) {

            var btn = $(this);
            btn.attr("disabled", true); //Disable the button so multiple request don't go through

            $.ajax({

                url: "@Url.Content("~/Continuum/AddCategory")",
                type: "POST",
                data: $("#addCategoryForm").serialize()

            }).done(function (data) {

                defaultNotify(data.Success); //display the default error or success message

                btn.attr("disabled", false); //Enable the button incase there was an error

                if (data.Success) {
                    $('#categoryTable').DataTable().ajax.reload(function () {
                        $(".wb-lbx").trigger("wb-init.wb-lbx");
                        $(".expandableSummary").trigger("wb-init.wb-details");
                    }); // Re-load the datatable

                    $("#addCategoryCloseBtn").click(); //Close the modal window on success
                }
            });
        }
    });

</script>