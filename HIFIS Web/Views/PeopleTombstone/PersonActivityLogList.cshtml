@model List<AuditViewModel>

@{
    ViewBag.ViewTitle = Labels.viewTitle_PersonActivityLog;
    
    ViewBag.LayoutView = LayoutPage.People;
}

@Html.Partial("_ValidationSummaryOuter")

<div>
    <div class="table-responsive">
        <table class="wb-tables table table-striped table-hover" data-wb-tables='{ "info": false }'>
            <thead>
                <tr>
                    <th>@Labels.User</th> 
                    <th>@Labels.ServiceProvider</th> 
                    <th>@Labels.ModuleType</th>
                    <th>@Labels.Description</th>
                    <th>@Labels.Date</th>
                </tr> 
            </thead>
            <tbody>
                @foreach (AuditViewModel item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.OrgName</td>
                        <td>@item.ModuleName</td>
                        <td>@item.Message</td>
                        <td>@item.Timestamp</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

