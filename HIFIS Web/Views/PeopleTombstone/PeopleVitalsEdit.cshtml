@model PeopleVitalsViewModel
@{
    ViewBag.ViewTitle = Labels.viewTitle_EditPeople;
    
    ViewBag.LayoutView = LayoutPage.People;   
}

@Html.Partial("_ValidationSummaryOuter")

<div>
    @using (Html.BeginForm("UpdateVitals", "PeopleTombstone", FormMethod.Post, new { @class = "form-horizontal" }))
    {      
        @Html.Partial("_PeopleVitalsRO_ext", new PeopleVitalsReadOnlyWrapperViewModel(Model.ReadOnlyVitals)) 
        
        @Html.Partial("_BaseHiddenFor", (BaseViewModel)Model)

        @Html.Partial("_PeopleVitals", Model) 
    
        <div class="form-group">
		    <div class="col-sm-offset-5 col-sm-7">
			    <button type="submit" class="saveButton">@Labels.Save</button>
                @Html.ActionLink(Labels.Cancel, "DisplayVitals", "PeopleTombstone", new { id = Model.PersonID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
		    </div>
	    </div>    
    }
</div>

<div>@Html.Partial("_BaseFooter", (BaseViewModel)Model)</div>
