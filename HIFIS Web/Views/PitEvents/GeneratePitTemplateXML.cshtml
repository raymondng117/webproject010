@model HIFIS.WEB.ViewModels.PitTemplateXMLFileViewModel

@{
    ViewBag.Title = "ExportPitTemplate";

    ViewBag.LayoutView = LayoutPage.ContentOnly;
}

<h2>Generate PIT Template XML</h2>

@using (Html.BeginForm("GeneratePitTemplateXML", "PitEvents", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.PitTemplateID)
    @Html.HiddenFor(model => model.PitTemplateName)

    <div>
        <label>Template:</label>
        @Html.HifisDisplayFor(m => m.PitTemplateName, null, true)
    </div>

    <div>
        <label>Filename:</label>
        @Html.HifisEditorFor(m => m.PitTemplateFileName, false, "WideText", null, true, null)
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="saveButton  ">@Labels.Save</button>
            @Html.ActionLink(Labels.Cancel, "EditPitTemplate", "PitEvents", new { pitTemplateID = Model.PitTemplateID } , new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
        </div>
    </div>
}   