@model List<RegistrationViewModel>

@{
	ViewBag.Title = Labels.RegistrationList;
	ViewBag.ViewTitle = Labels.RegistrationList;
	ViewBag.LayoutView = LayoutPage.ContentOnly;
}

<div class="table-responsive">
	<table class="wb-tables table table-striped table-hover" data-wb-tables='{ "info": false, "bFilter": false, "lengthChange": false }'>
		<thead>
			<tr>
				<th>@Labels.Name</th>
				<th>@Labels.Status</th>
				<th>@Labels.Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var reg in Model)
			{
				<tr>
					<td>@reg.ServiceProviderName</td>
					<td>@reg.Status</td>
					<td>@Html.ActionLink(Labels.Manage, "Manage", new {ID = reg.ID}, new { @class = "manageButton", alt=Labels.Manage, aria_label = Labels.Manage, @role = "button" })</td>
				</tr>
			}
		</tbody>
	</table>
</div>
