@model LiabilityViewModel          
@{
    ViewBag.ViewTitle = Labels.viewTitle_DisplayLiability;
    ViewBag.LayoutView = LayoutPage.Client;
}

<div class="displayView">

    <div class="row">
        @Html.HifisLabelFor(model => model.LiabilityTypeID, new { @class = "col-xs-4 control-label" })
        <div class="col-xs-8">
            <input type="text" class="inputTextOnly" id="LiabilityTypeID" name="LiabilityTypeID"
                   value="@(WebHelper.GetTextFromCache(CachedTableTypes.HIFIS_LiabilityTypes, Culture, Model.LiabilityTypeID))"
                   readonly />
        </div>
    </div>

    <div class="form-input-prepend form-input-append row">
        @Html.HifisLabelFor(model => model.LiabilityAmount, new { @class = "col-xs-4 control-label" })
        <div class="col-xs-8">
            <input type="text" class="inputTextOnly" id="LiabilityAmount" name="LiabilityAmount"
                   value="@Html.DisplayFor(model => model.LiabilityAmount, new { @class = "money" })"
                   readonly />
        </div>
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.CountryID, new { @class = "col-xs-4 control-label" })
        <div class="col-xs-8">
            <input type="text" class="inputTextOnly" id="CountryID" name="CountryID"
                   value="@(WebHelper.GetTextFromCache(CachedTableTypes.HIFIS_CountryTypes, Culture, Model.CountryID))"
                   readonly />
        </div>
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.ProvinceID, new { @class = "col-xs-4 control-label" })
        <div class="col-xs-8">
            <input type="text" class="inputTextOnly" id="ProvinceID" name="ProvinceID"
                   value="@(WebHelper.GetTextFromCache(CachedTableTypes.HIFIS_ProvinceTypes, Culture, Model.ProvinceID))"
                   readonly />
        </div>
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.LiabilityDateStart, new { @class = "col-xs-4 control-label" })
        <div class="col-xs-8">
            <input type="text" class="inputTextOnly" id="LiabilityDateStart" name="LiabilityDateStart"
                   value="@Html.DisplayFor(model => model.LiabilityDateStart)" readonly />
        </div>
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.LiabilityDateEnd, new { @class = "col-xs-4 control-label" })
        <div class="col-xs-8">
            <input type="text" class="inputTextOnly" id="LiabilityDateEnd" name="LiabilityDateEnd"
                   value="@Html.DisplayFor(model => model.LiabilityDateEnd)" readonly />
        </div>
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.LiabilityDescription, new { @class = "col-xs-4 control-label" })
        <div class="col-xs-8">
            <input type="text" class="inputTextOnly" id="LiabilityDescription" name="LiabilityDescription"
                   value="@Html.DisplayFor(model => model.LiabilityDescription)" readonly />
        </div>
    </div>


    <div class="row">
        <div class="col-sm-offset-3 col-sm-9">
            <div class="btn-group">
                @if (RightsHelper.HasRight(UserRights.Financials_Assets_Liabilities_Edit))
                {
                    @Html.ActionLink(Labels.Edit, "EditLiability", "Financials", new { id = Model.ReadOnlyVitals.ClientID, liabilityID = Model.LiabilityOrAssetID }, new { @class = "editButton mrgn-rght-sm", alt=Labels.Edit, aria_label = Labels.Edit, @role = "button" })
                }
                @Html.ActionLink(Labels.Cancel, "Display", "Financials", new { id = Model.ClientID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
            </div>
        </div>
    </div>

</div>

<div>@Html.Partial("_BaseFooter", (BaseViewModel)Model)</div>