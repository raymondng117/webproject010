@model List<ClientServicesItemsViewModel>

<div>
    <div class="table-responsive">
        <table class="wb-tables table table-striped table-hover" data-wb-tables='{ "info": false }'>
            <thead>
                <tr>
                    <th>@Labels.Service</th>
                    <th>@Labels.OwnerOrg</th>
                    <th>@Labels.Hours</th>
                    <th>@Labels.Minutes</th>
                    <th>@Labels.UnitCost</th>
                    <th>@Labels.UnitPrice</th>
                    <th>@Labels.ActiveYN</th>
                    <th>@Labels.Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.OwnerOrgName</td>
                            <td>@item.Hours</td>
                            <td>@item.Minutes</td>
                            <td>@item.UnitCost</td>
                            <td>@item.UnitPrice</td>
                            <td>@if(item.ActiveYN)
                                {
                                    @Labels.Active
                                }
                                else
                                {
                                    @Labels.Inactive
                                }
                            </td>
                            <td class="align-text-center">
                                @if (RightsHelper.HasRight(UserRights.ExpressGSTemplates_Edit))
                                {
                                    if (item.OwnerOrganizationID == null || item.OwnerOrganizationID == ViewBag.CurrentOrgID)
                                    {
                                        @Html.ActionLink(Labels.Edit, "EditServicesItem", "GoodsAndServices", new { servicesItemID = item.ActivitiesItemsID }, new { @class = "editButton noText", alt=Labels.Edit, aria_label = Labels.Edit, @role = "button" })
                                    }
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>