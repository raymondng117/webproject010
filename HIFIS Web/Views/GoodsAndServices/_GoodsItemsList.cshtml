@model List<GoodsItemsViewModel>

<div>
    <div class="table-responsive">
        <table class="wb-tables table table-striped table-hover" data-wb-tables='{ "info": false }'>
            <thead>
                <tr>
                    <th>@Labels.Good</th>
                    <th>@Labels.OwnerOrg</th>
                    <th>@Labels.UnitCost</th>
                    <th>@Labels.UnitPrice</th>
                    <th>@Labels.Units</th>
                    <th>@Labels.UnitOfMeasure</th>
                    <th>@Labels.ActiveYN</th>  
                    <th>@Labels.Action</th>       
                </tr>
            </thead>
            <tbody>
                @if(Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>                    
                            <td>@item.Name</td>
                            <td>@item.OwnerOrgName</td>
                            <td>@item.UnitCost</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.NoOfUnits</td>
                            <td>@item.UnitOfMeasureName</td>
                            <td>@if(item.ActiveYN)
                                {
                                    @Labels.Active
                                }
                                else
                                {
                                    @Labels.Inactive        
                                }
                            </td>
                            <td class="align-text-center">                        
                                @if (RightsHelper.HasRight(UserRights.ExpressGSTemplates_Edit))
                                {
                                    if (item.OwnerOrganizationID == null || item.OwnerOrganizationID == ViewBag.CurrentOrgID)
                                    {
                                        @Html.ActionLink(Labels.Edit, "EditGoodsItem", "GoodsAndServices", new { goodsItemID = item.GoodsItemsID }, new { @class = "editButton noText", alt = Labels.Edit, aria_label = Labels.Edit, @role = "button" })
                                    }
                                }                        
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>