@model FoodBankItemDetailViewModel
@{
    ViewBag.ViewTitle = Labels.viewTitle_EditFoodBankItem;
    
    ViewBag.LayoutView = LayoutPage.ContentOnly;
}

@Html.Partial("_ValidationSummaryOuter")

<div>
    @using (Html.BeginForm("EditFoodBankItemDetails", "FoodBanks", FormMethod.Post, new { @class = "form-horizontal" }))
    {   
        @Html.Partial("_BaseHiddenFor", (BaseViewModel)Model)

        @Html.Partial("_FoodBankItemDetails", Model)

        <div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button id="AddFoodBankItem" type="submit" class="saveButton  ">@Labels.Save</button>
                @Html.ActionLink(Labels.Cancel, "FoodBankItemsList", "FoodBanks", new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
			</div>
		</div>         
    }

</div>
 
<div>@Html.Partial("_BaseFooter", (BaseViewModel)Model)</div>

