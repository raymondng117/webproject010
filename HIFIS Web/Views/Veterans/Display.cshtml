@model VeteransViewModel
@{
    ViewBag.ViewTitle = Labels.viewTitle_DisplayVeteran;
    
    ViewBag.LayoutView = LayoutPage.Client;
}

<div class=" displayView">

    <div class="row">
        @Html.HifisLabelFor(model => model.DateStart, new { @class = "autowidth" })
        @Html.DisplayFor(model => model.DateStart)
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.DateEnd, new { @class = "autowidth" })
        @Html.DisplayFor(model => model.DateEnd)
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.ElementTypeID, new { @class = "autowidth" })
        @Html.Partial("DisplayViewTemplates/_SingleItemSelectList", 
                        new SingleItemSelectList 
                        {
                            ID = Model.ElementTypeID,
                            List = WebHelper.GetSelectListFromCache(CachedTableTypes.HIFIS_ArmedForcesElementTypes, Culture, Model.ElementTypeID)
                        })
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.ArmyRankID, new { @class = "autowidth" })
        @Html.Partial("DisplayViewTemplates/_SingleItemSelectList", 
                        new SingleItemSelectList 
                        {
                            ID = Model.ArmyRankID,
                            List = WebHelper.GetSelectListFromCache(CachedTableTypes.HIFIS_ArmyRankTypes, Culture, Model.ArmyRankID)
                        })
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.ReasonForDischargeTypeID, new { @class = "autowidth" })
        @Html.Partial("DisplayViewTemplates/_SingleItemSelectList", 
                        new SingleItemSelectList 
                        {
                            ID = Model.ReasonForDischargeTypeID,
                            List = WebHelper.GetSelectListFromCache(CachedTableTypes.HIFIS_ReasonForDischargeVeteransTypes, Culture, Model.ReasonForDischargeTypeID)
                        })
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.ArmedConflictID, new { @class = "autowidth" })
        @Html.Partial("DisplayViewTemplates/_SingleItemSelectList", 
                        new SingleItemSelectList 
                        {
                            ID = Model.ArmedConflictID,
                            List = WebHelper.GetSelectListFromCache(CachedTableTypes.HIFIS_ArmedConflictsTypes, Culture, Model.ArmedConflictID)
                        })
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.ArmyRoleTypeID, new { @class = "autowidth" })
        @Html.Partial("DisplayViewTemplates/_SingleItemSelectList", 
                        new SingleItemSelectList 
                        {
                            ID = Model.ArmyRoleTypeID,
                            List = WebHelper.GetSelectListFromCache(CachedTableTypes.HIFIS_ArmyRoleTypes, Culture, Model.ArmyRoleTypeID)
                        })
    </div>

    <div class="row">
       @Html.HifisLabelFor(model => model.Attributes, new { @class = "autowidth" })
       @Html.Partial("DisplayViewTemplates/_MultipleItemSelectList", 
                        new MultipleItemSelectList 
                        {
                            IDs = Model.Attributes.Select(l => l.ToString()).ToList(),
                            List = WebHelper.GetSelectListFromCache(CachedTableTypes.HIFIS_VeteransAttributeTypes, Culture, Model.Attributes.Select(l => l.ToString()).ToList())
                        })
    </div> 

    <div class="row">
        @Html.HifisLabelFor(model => model.VACCaseWorker, new { @class = "autowidth" })
        @Html.DisplayFor(model => model.VACCaseWorker)
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.IDNumberForConflict, new { @class = "autowidth" })
        @Html.DisplayFor(model => model.IDNumberForConflict)
    </div>

    <div class="row">
        @Html.HifisLabelFor(model => model.Comments, new { @class = "autowidth" })
        @Html.DisplayFor(model => model.Comments)
    </div>

    <div class="btn-group">
        <div class="row">
            <div class="col-sm-offset-3 col-sm-9">
                @if (RightsHelper.HasRight(UserRights.Veterans_Edit))
                {
                    @Html.ActionLink(Labels.Edit, "Edit", "Veterans", new { id = Model.ClientID, armyServicePeriodID = Model.ArmyServicePeriodID }, new { @class = "editButton", alt=Labels.Edit, aria_label = Labels.Edit, @role = "button" })
                }
                @Html.ActionLink(Labels.Cancel, "ClientList", "Veterans", new { id = Model.ClientID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
            </div>
        </div>
    </div>
</div>

<div>@Html.Partial("_BaseFooter", (BaseViewModel)Model)</div>
