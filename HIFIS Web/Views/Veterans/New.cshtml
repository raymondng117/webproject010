@model VeteransViewModel
@{
    ViewBag.ViewTitle = Labels.viewTitle_AddVeteran;
    
    ViewBag.LayoutView = LayoutPage.Client;
}

@Html.Partial("_ValidationSummaryOuter")

<div>    
    @using (Html.BeginForm("New", "Veterans", FormMethod.Post, new { @class = "form-horizontal", id = "VeteranForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.Partial("_VeteranService")

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" class="saveButton  ">@Labels.Save</button>
                @Html.ActionLink(Labels.Cancel, "ClientList", "Veterans", new { id = Model.ClientID }, new { @class = "cancelButton", alt = Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
            </div>
        </div>
    }
</div>