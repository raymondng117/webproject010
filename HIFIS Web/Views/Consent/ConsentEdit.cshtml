@model ConsentViewModel
@{
    ViewBag.ViewTitle = Labels.viewTitle_EditConsent;

    ViewBag.LayoutView = LayoutPage.Client;
}

@Html.Partial("_ValidationSummaryOuter")


@using (Html.BeginForm("ConsentEdit", "Consent", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", id = "consentEditForm" }))
{
    @Html.AntiForgeryToken()
    @Html.Partial("_BaseHiddenFor", (BaseViewModel)Model)

    @Html.Partial("_ConsentEdit", Model)

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @if (ViewBag.HasCoordinatedAccess)
            {
                @Html.Partial("_ConfirmCoordinatedAccessAction");
                @*@Html.Partial("_ConfirmAction", new ConfirmActionViewModel(ConfirmActionTypes.Undo))*@

            }
            <button type="submit" id="consentSaveButton" class="saveButton">@Labels.Save</button>
            @Html.ActionLink(Labels.Cancel, "ConsentList", "Consent", new { id = Model.ReadOnlyVitals.ClientID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
        </div>
    </div>
}

<div>@Html.Partial("_BaseFooter", (BaseViewModel)Model)</div>
