@model ConsentViewModel
@{
    ViewBag.ViewTitle = Labels.viewTitle_NewConsent;
    
    ViewBag.LayoutView = LayoutPage.Client;
}

@Html.Partial("_ValidationSummaryOuter")

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("ConsentNew", "Consent", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                @Html.Partial("_Consent")
            </div>

            <div class="row">
                <div class="col-sm-offset-3 col-sm-9">
                    <div class="form-group">
                        <button type="submit" class="saveButton">@Labels.Save</button>
                        @Html.ActionLink(Labels.Cancel, "ConsentList", "Consent", new { id = Model.ReadOnlyVitals.ClientID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button"  })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
