@model SessionCommentViewModel
@{
    ViewBag.LayoutView = LayoutPage.Client;
    ViewBag.ViewTitle = Labels.viewTitle_SessionCommentEdit;
    
}

@Html.Partial("_ValidationSummaryOuter")

@using (Html.BeginForm("EditMeetingComment", "CaseManagement", new { sessionCommentID = Model.SessionCommentID, caseID = Model.CaseID, goalID = Model.GoalID }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Partial("_BaseHiddenFor", Model)

    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ClientID)
    @Html.HiddenFor(model => model.SessionID)
    @Html.HiddenFor(model => model.SessionCommentID)
    @Html.HiddenFor(model => model.CaseID)
    @Html.HiddenFor(model => model.GoalID)
    @Html.HiddenFor(model => model.DateCreated)
    @Html.HiddenFor(model => model.CommentsID)
    @Html.HiddenFor(model => model.CommentTypeID)
    @Html.HiddenFor(model => model.UserName)
    
    <div class="row">
        <div class="col-xs-2">
            <div class="pull-right mrgn-bttm-sm">
                @Html.HifisLabelFor(model => model.UserName)
            </div>
        </div>  
        <div class="col-xs-10">
            @Html.DisplayFor(model => model.UserName)
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2">
            <div class="pull-right mrgn-bttm-sm">
                @Html.HifisLabelFor(model => model.DateCreated)
            </div>
        </div>  
        <div class="col-xs-10">
            @Html.DisplayFor(model => model.DateCreated)
        </div>
    </div> 
    
    @Html.Partial("_CaseComments", Model)
   
    <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
		    <button type="submit" class="saveButton">@Labels.Save</button>
        @Html.ActionLink(Labels.Cancel, "EditMeeting", "CaseManagement", new { caseID = Model.CaseID, id = Model.ReadOnlyVitals.ClientID, goalID = Model.GoalID, sessionID = Model.SessionID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label=Labels.Cancel, @role = "button" })
	    </div>
    </div> 
}
