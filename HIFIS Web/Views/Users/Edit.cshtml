@model UserProfileViewModel
@{
    ViewBag.LayoutView = LayoutPage.ContentOnly;
    
    ViewBag.ViewTitle = Labels.viewTitle_UserProfileEdit;
}

@Html.Partial("_ValidationSummaryOuter")

<div>
    @using (Html.BeginForm("Edit", "Users", new { id = Model.UserID }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.Partial("_User", Model)
        
        <div>
            @Html.Button("save", Labels.Save, HtmlButtonType.Submit, null, new { @class = "saveButton" })
            @Html.ActionLink(Labels.Cancel, "List", "Users", null, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
        </div>
    }
</div>