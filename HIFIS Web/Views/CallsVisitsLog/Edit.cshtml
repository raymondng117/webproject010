@model CallsVisitsLogViewModel
@{
    ViewBag.ViewTitle = Labels.viewTitle_CallsVisitsLogEdit;
    ViewBag.LayoutView = LayoutPage.Client;
}

@Html.Partial("_ValidationSummaryOuter")

<div class="row">
    <div id="EditCallsVisitsLog_Form" class="col-sm-12">

        @using (Html.BeginForm("Edit", "CallsVisitsLog", new { id = Model.ClientID, contactID = Model.ClientContactEventTypeID }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.Partial("_CallsVisitsLog")

            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-9" style="padding-left:10px;">
                    <div class="btn-group">
                        <button type="submit" class="saveButton">@Labels.Save</button>
                        @Html.ActionLink(Labels.Cancel, "ClientList", "CallsVisitsLog", new { id = Model.ClientID }, new { @class = "cancelButton mrgn-lft-sm mrgn-bttm-md", alt=Labels.Cancel, aria_label=Labels.Cancel, @role="button" })
                    </div>
                </div>
            </div>
        }

    </div>

</div>

<div>@Html.Partial("_BaseFooter", (BaseViewModel)Model)</div>
