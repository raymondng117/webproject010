@model EncampmentViewModel

<div class="col-sm-12">
    @if (ViewBag.Display == false)
    {
            <div>
                @Html.Partial("Plugins/_TinyMCEScript")
                @Html.TextAreaFor(model => model.Comments, new { @class = "mceEditor_Messaging" })
                @Html.ValidationMessageFor(model => model.Comments, null, new { @class = "align-center" })
            </div>
            <div class="saveButtonCommentBox">
        <button type="submit" id="commentButton" class="saveButton" style="align-content:center">@Labels.Save</button>
    </div>
    }
    else
    {
        <div>
            <label class="control-label wdth-strct-200">@Labels.Comment</label>
            @Html.Partial("Plugins/_TinyMCEScript")
            @Html.EditorFor(model => model.Comments, "TinyMCE_Print")
        </div>
    }
</div>

<!-- JavaScript -->
@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">

             $(function () {
                 $("#commentButton").on("click", function (e) {
                     tinyMCE.triggerSave();
                     var comment;
                     var eID;

                     eID = $('input[id=EncampmentID]').val();
                     comment = tinymce.get('Comments').getContent();

                     $.ajax({
                         url: "@Url.Action("UpdateComments", "Outreach")",
                         type: "POST",
                         data: { "comment": comment, "EncampmentID": eID},
                     }).done(function (data) {
                         if(data.Success){
                             displayNotification("success", "", "<p>@Labels.DefaultDataSavedMessage</p>");
                         }
                         else{
                             displayNotification("error", "", "<p>@Labels.FailedToSave</p>");
                         }
                     });
                 });
             });
        </script>
    );
}