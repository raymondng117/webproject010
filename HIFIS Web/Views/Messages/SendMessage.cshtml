@model MessageViewModel
@{
    ViewBag.ViewTitle = Labels.SendMessage;
    
    ViewBag.LayoutView = LayoutPage.ContentOnly;
}
    
@Html.Partial("_ValidationSummaryOuter")

<div>
    @using (Html.BeginForm("SendMessage", "Messages", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.Partial("_Message")

        <div class="form-group">
			<div class="col-sm-offset-5 col-sm-7">
				<button id="msgSubmit" type="submit" class="sendButton">@Labels.Send</button>
            @Html.ActionLink(Labels.Cancel, "List", "Messages", new { }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
			</div>
		</div>        
    }
</div>