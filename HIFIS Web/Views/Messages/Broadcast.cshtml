@{
    ViewBag.ViewTitle = Labels.viewTitle_Broadcast;
    
    ViewBag.LayoutView = LayoutPage.ContentOnly;
}

@Html.Partial("_ValidationSummaryOuter")

<div>    
    <div class="form-group">

        <div class="form-group">
		    @Html.HifisLabelFor("broadcastSubject", Labels.Subject, new { @class = "control-label col-sm-2 align-text-right mrgn-tp-xs" })

		    <div class="col-sm-10">
                <div class="col-sm-10">
                    <input id="broadcastSubject" name="broadcastSubject" class="form-control mrgn-bttm-md" />
                </div> 
		    </div>
	    </div>

        <div class="form-group">
		    @Html.HifisLabelFor("broadcastMsg", Labels.message, new { @class = "control-label col-sm-2 align-text-right mrgn-tp-xs" })

		    <div class="col-sm-10">
                <div class="col-sm-10">
                    <textarea class="form-control mrgn-bttm-md" id="broadcastMsg" name="broadcastMsg" cols="100" rows="10" ></textarea>
                </div> 
		    </div>
	    </div>

        <input type="hidden" id="sendersNameBroadcast" value="@ViewBag.SendersName" />

        <div class="form-group">
		    <div class="col-sm-offset-2">
                <div class="mrgn-lft-lg">
			        <button type="submit" id="sendBroadcast" class="sendButton">@Labels.Send</button>
                </div>
		    </div>
	    </div>  

    </div>    
</div>