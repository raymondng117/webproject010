@model GroupActivityViewModel
@{
    ViewBag.LayoutView = LayoutPage.ContentOnly;
    ViewBag.ViewTitle = Labels.viewTitle_EditGroupActivity;
    ViewBag.activityID = Model.GroupActivityID;
}

@Html.Partial("_ValidationSummaryOuter")

<div class="clearfix"></div>

<div>


    @using (Html.BeginForm("Edit", "GroupActivities", FormMethod.Post, new { @class = "form-horizontal", id = "myForm" }))
    {
        @Html.Partial("_BaseHiddenFor", Model)

        @Html.Partial("_Activity", Model)

        <div class="form-group">
            <div class="row">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="saveButton  ">@Labels.Save</button>
                    @Html.ActionLink(Labels.Cancel, "List", "GroupActivities", new { }, new { @class = "cancelButton  ", title = Labels.Cancel, alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
                </div>
            </div>
        </div>
    }
</div>

<div>@Html.Partial("_BaseFooter", Model)</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">

            $(document).ready(function () {
                $("#ServiceProgramsButton").fadeIn(800);
            });

        </script>
);
}
