@model OrganizationViewModel
@{
    if (Model.OrganizationID != null)
    {
        ViewBag.ViewTitle = Labels.ServiceProviderSettings + ": " + Model.Name;
        ViewBag.LayoutView = LayoutPage.SecNav;
    }
    else
    {
        ViewBag.ViewTitle = Labels.ServiceProviderSettings;
        ViewBag.LayoutView = LayoutPage.ContentOnly;
    }
}

@Html.Partial("_ValidationSummaryOuter")

@using (Html.BeginForm("OrganizationSettings", "Organization", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.Partial("_BaseHiddenFor", (BaseViewModel)Model)

    @Html.HiddenFor(model => model.OrganizationID)
    @Html.HiddenFor(model => model.TopParentOrganizationID)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.ServiceProviderTypeID)
    @Html.HiddenFor(model => model.Active)
    @Html.HiddenFor(model => model.ClusterID)

    <div>
		@Html.HifisEditorFor(m => m.CanSeeMale, "YesNo")
	</div>
	<div>
		@Html.HifisEditorFor(m => m.CanSeeFemale, "YesNo")
	</div>
	<div>
		@Html.HifisEditorFor(m => m.CanSeeYouth, "YesNo")
	</div>
	<div>
		@Html.HifisEditorFor(m => m.CanSeeChildren, "YesNo")
	</div>			
	<div>
		@Html.HifisEditorFor(m => m.ChildhoodAge, null, new { @class = "wdth-strct-100" })
	</div>
	<div>
		@Html.HifisEditorFor(m => m.YouthAge, null, new { @class = "wdth-strct-100" })
	</div>
	<div>
		@Html.HifisEditorFor(m => m.SeniorAge, null, new { @class = "wdth-strct-100" })
	</div>
	<div>
		@Html.HifisEditorFor(m => m.FamilyHeadAgeMin, null, new { @class = "wdth-strct-100" })
	</div>
    <div>
		@Html.HifisEditorFor(m => m.CustomTablesName)
	</div>
    <div>
		@Html.HifisEditorFor(m => m.Privacy, "YesNo")
	</div>
    <div>
        <div class="form-group">
		    @Html.HifisLabelFor(m => m.BedDisplayExpanded, new { @class = "col-sm-2 control-label" })

		    <div class="col-sm-10">
                <p class="form-control-static">
                    @{   
                        object first = new { @class = "YesAndNo", data_on_text = Labels.Expanded, data_off_text = Labels.Minimized, data_on_color = "danger", data_off_color = "info" };
                    }
                    @Html.CheckBoxFor(m => m.BedDisplayExpanded, first)
                </p>
		    </div>
	    </div>
    </div>
				  
    <div class="row">
	    <div class="mrgn-bttm-md col-sm-offset-2 col-sm-4">
	        <button type="submit" class="saveButton">@Labels.Save</button>
            @Html.ActionLink(Labels.Cancel, "Index", "Organization", new { }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
	    </div>
    </div>
}

<div>@Html.Partial("_BaseFooter", (BaseViewModel)Model)</div>


<script type="text/javascript">
    function checkClusterRequired() {
        return true;
    }
</script>