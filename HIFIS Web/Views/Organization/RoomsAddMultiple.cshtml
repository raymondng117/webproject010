@model RoomViewModel
@{
    ViewBag.ViewTitle = Labels.AddMultipleRooms + ": " + Model.ShelterName;
    ViewBag.LayoutView = LayoutPage.SecNav;
}

@using (Html.BeginForm("RoomsAddMultiple", "Organization", FormMethod.Post, new { @class = "form-horizontal" }))
{    
    @Html.AntiForgeryToken()
    @Html.Partial("_BaseHiddenFor", Model)

    @Html.HiddenFor(model => model.OrganizationID)

    <div>
        @Html.HifisEditorFor(model => model.Name)
    </div>
    
    <div>
        @Html.HifisEditorFor(model => model.StartIndex)
    </div>
    
    <div>
        @Html.HifisEditorFor(model => model.NumberOfRoomsToAdd)
    </div>
    
    <div>
        @Html.HifisEditorFor(model => model.ActiveYN, "YesNo")
    </div>

    <div class="clearfix"></div>
    
    <div class="mrgn-bttn-md">
	    <button type="submit" class="saveButton">@Labels.Save</button>
        @Html.ActionLink(Labels.Cancel, "ShelterRoomsList", "Organization", new { id = Model.OrganizationID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
    </div>
}
