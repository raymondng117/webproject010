@model CustomTableFieldDropdownViewModel
@{
    ViewBag.ViewTitle = Labels.viewTitle_EditCustomTableFieldDropdown;
    ViewBag.LayoutView = LayoutPage.ContentOnly;
}

@Html.Partial("_ValidationSummaryOuter")

<div>
    @using (Html.BeginForm("EditCustomTableFieldDropdown", "CustomTables", new { id = Model.CustomFieldDropdownID }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.Partial("_CustomTableFieldDropdown", Model)

        <div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="saveButton">@Labels.Save</button>
                @Html.ActionLink(Labels.Cancel, "CustomTableFieldDropdownsList", new { id = Model.CustomFieldID, customTableID = Model.CustomTableID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
			</div>
		</div>         
    }
</div>

<div>@Html.Partial("_BaseFooter", (BaseViewModel)Model)</div>