@model BulletinViewModel
@{
    ViewBag.ViewTitle = Labels.viewTitle_EditBulletin;
    ViewBag.LayoutView = LayoutPage.ContentOnly;
}

@Html.Partial("_ValidationSummaryOuter")

@using (Html.BeginForm("Edit", "Bulletins", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Partial("_Bulletin", Model) 
        
    <div class="form-group">
	    <div class="col-sm-offset-5 col-sm-7">
		    <button type="submit" class="saveButton" name="Edit" value="Edit" id="save">@Labels.Save</button>
            @Html.ActionLink(Labels.Cancel, "BulletinList", "Bulletins", null, new { @class = "cancelButton", alt=Labels.Cancel, aria_label=Labels.Cancel, @role="button" })
	    </div>
    </div> 
}

<div>@Html.Partial("_BaseFooter", (BaseViewModel)Model)</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
           
            $("#save").click(function () {
                $("#orgList").rules('add', 'required');
            });
        </script>
);
}