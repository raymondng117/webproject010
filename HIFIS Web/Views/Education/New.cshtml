@model EducationViewModel
@{
    ViewBag.ViewTitle = Labels.NewEducation;
    
    ViewBag.LayoutView = LayoutPage.Client;
}

@Html.Partial("_ValidationSummaryOuter")

<div id="NewEducation_FormSection">
    @using (Html.BeginForm("New", "Education", FormMethod.Post, new { @class = "form-horizontal mrgn-bttm-nn" }))
    {     
        <div class="col-sm-12">
            @Html.HiddenFor(model => model.ClientID)

            <div class="row">
                @Html.Partial("_Education")
            </div>

            <div class="row">
                <div class="col-sm-offset-3 col-sm-9">
                    <div class="form-group">
                        <button type="submit" class="saveButton  ">@Labels.Save</button>
                        @Html.ActionLink(Labels.Cancel, "ClientList", "Education", new { id = Model.ClientID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>