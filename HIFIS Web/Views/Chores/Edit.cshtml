@model ChoreViewModel
@{
    ViewBag.ViewTitle = Labels.viewTitle_EditChore;
    
    ViewBag.LayoutView = LayoutPage.Client;
}

@Html.Partial("_ValidationSummaryOuter")

<div>    
    @using (Html.BeginForm("Edit", "Chores", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.Partial("_Chore", Model)
        @Html.Partial("_BaseHiddenFor", (BaseViewModel)Model)

        <div class="form-group">
	        <div class="col-sm-offset-3 col-sm-9">
		        <button type="submit" class="saveButton">@Labels.Save</button>
                @Html.ActionLink(Labels.Cancel, "ClientList", "Chores", new { id = Model.ReadOnlyVitals.ClientID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label=Labels.Cancel, @role = "button" })
	        </div>
        </div>         
    }
</div>

<div>@Html.Partial("_BaseFooter", (BaseViewModel)Model)</div>