@model DietViewModel         
@{
    ViewBag.ViewTitle = Labels.viewTitle_EditDiet;
    
    ViewBag.LayoutView = LayoutPage.Client;
}

@Html.Partial("_ValidationSummaryOuter")

<div class="row">    
    @using (Html.BeginForm("Edit", "Diet", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="row">
            @Html.Partial("_Diet")
        </div>

        <div class="row"> 
            <div class="col-sm-offset-3 col-sm-9">
                <div class="form-group">
                    <button type="submit" class="saveButton  ">@Labels.Save</button>
                    @Html.ActionLink(Labels.Cancel, "Display", "Diet", new { id = Model.ClientID, dietID = Model.DietID }, new { @class = "cancelButton", alt=Labels.Cancel, aria_label = Labels.Cancel, @role = "button" })
                </div>
            </div>
        </div>
    }
</div>

<div>@Html.Partial("_BaseFooter", (BaseViewModel)Model)</div>