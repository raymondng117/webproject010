@model List<string>

@if (Model != null)
{
    <span id="shortList">
        @for (int i = 0; i < 3 && i < Model.Count(); i++)
        {
            <i>( @Model[i] )</i>@(i != Model.Count() - 1 && i != 2 ? ", " : " ")
        }
    </span>

    if (Model.Count > 3)
    {
        <a id="viewMore" class="viewMoreLink">View more...</a>
        <span id="longList" style="display: none">
            @for (int i = 0; i < Model.Count; i++)
            {
                <i>( @Model[i] ) </i>@(i != Model.Count() - 1 ? ", " : "")
            }
        </span>
    }
}

<script>
    $("#viewMore").click(function () {
        $('#shortList').hide();
        $('#viewMore').hide();
        $('#longList').show();
    })
</script>